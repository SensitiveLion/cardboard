<% if @comment.errors.present? %>
  <% @comment.errors.full_messages.each do |error| %>
    <ul>
      <li><%= error %></li>
    </ul>
  <% end %>
<% end %>

<h1>edit the comment information</h1>

<div class="row">
  <div class="small-8 large-centered column">
    <%= form_for [@comment] do |f| %>

      <div class="field">
        <%= f.label :body, "your comment" %>
        <%= f.text_area :body %>
      </div>

      <div class="actions">
        <%= f.submit "edit comment" %>
      </div>

    <% end %>

    <%= link_to "cancel", game_path(@game) %> || <%= link_to "delete this comment", {action: "destroy", id: @comment.id }, method: :delete, data: { confirm: "are you sure you want to delete this comment?" } %>
  </div>
</div>
