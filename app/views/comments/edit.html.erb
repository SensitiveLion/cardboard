<%- if @comment.errors.present? -%>
  <%- @comment.errors.full_messages.each do |error| -%>
    <ul>
      <li><%= error %></li>
    </ul>
  <% end %>
<% end %>

<h1>edit the comment information</h1>
<%= form_for [@comment] do |f| %>

  <%= f.label :body, "your comment" %>
  <%= f.text_area :body %>

  <%= f.submit "edit comment" %>
<% end %>

<%= button_to "cancel", game_path(@game), method: "get" %>
<%= button_to "delete this comment", {action: "destroy", id: @comment.id }, method: :delete, data: { confirm: "are you sure you want to delete this comment?" } %>
