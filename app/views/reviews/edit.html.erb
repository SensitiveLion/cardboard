<% if @review.errors.present? %>
  <% @review.errors.full_messages.each do |error| %>
    <ul>
      <li><%= error %></li>
    </ul>
  <% end %>
<% end %>

<h1>edit the review information</h1>
<div class="row">
  <div class="small-8 large-centered column">
    <%= form_for [@review] do |f| %>

      <div class="field">
      <%= f.label :body, "your review" %>
      <%= f.text_area :body %>
      </div>

      <div class="field">
      <%= f.label :game_rating, "rating" %>
      <%= f.select :game_rating, options_for_select((1..10).to_a, @review.game_rating) %>
      </div>

      <div class="actions">
        <%= f.submit "edit review" %>
      <div class="action">
    <% end %>
    <%= link_to "cancel", game_path(@review.game) %> || <%= link_to "delete this review", {action: "destroy", id: @review.id }, method: :delete, data: { confirm: "are you sure you want to delete this review?" } %>
  </div>
</div>
