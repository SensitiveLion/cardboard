<div class="row" id="title">
  <div class="small-8 large-centered column" >
    <h1>cardboard<h1>
    <h3>for all your corrugated needs</h3>

  </div>
</div>
<div class="large-12 columns">
  <div class="row">
    <div class="large-4 small-6 columns">
      <div class="panel">
        <h4 class="panel-text">search games</h4><hr>
        <h5>
          <%= form_tag games_path, method: :get do %>
            <%= text_field_tag :query, params[:query], class: "search-box" %>
            <%= submit_tag "search", name: nil, class: "btn btn-search" %>
          <% end %>
        </h5><hr>
        <% if params[:query] != nil %>
          <% if @games.empty? %>
            no games matched your search
          <% else %>
            <% @games.each do |game| %>
              <div class="row">
                <div class="large-12 small-centered columns">
                  <h5><%= link_to game.name, game_path(game) %></h5>
                </div>
              </div><hr>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="large-4 small-6 columns">
      <div class="panel">
        <h4 class="panel-text">all the games</h4><hr>
        <% @games_name.each do |game| %>
          <div class="row">
            <div class="large-12 small-centered columns">
              <h5><%= link_to game.name, game_path(game) %></h5>
            </div>
          </div><hr>
        <% end %>
      </div>
    </div>
    <div class="large-4 small-12 columns">
      <div class="panel">
        <h4 class="panel-text">highest rated games</h4><hr>
        <% @games_rating.each do |game| %>
          <div class="row">
            <div class="large-12 small-centered columns">
              <h5><%= link_to game.name, game_path(game) %></h5>
            </div>
          </div><hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
